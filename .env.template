# TARTIBIX Platform Environment Configuration
# Copy this file to .env.local and fill in your values

# =====================================================
# Supabase Configuration
# =====================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =====================================================
# Database Configuration
# =====================================================
# Set to 'true' to use Supabase database instead of local storage
# When false or not set, the app will use file-based storage
USE_DATABASE=false

# =====================================================
# Application Settings
# =====================================================
# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Default currency for financial values
NEXT_PUBLIC_DEFAULT_CURRENCY=SAR

# =====================================================
# Feature Flags
# =====================================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_AUTH=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# =====================================================
# Storage Configuration
# =====================================================
# Maximum file upload size in MB
NEXT_PUBLIC_MAX_UPLOAD_SIZE=50

# Allowed file types for document uploads (comma-separated)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,dwg,dxf

# =====================================================
# API Configuration
# =====================================================
# Rate limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# =====================================================
# Development Settings
# =====================================================
# Enable debug mode
DEBUG_MODE=false

# Log level: error, warn, info, debug
LOG_LEVEL=info
